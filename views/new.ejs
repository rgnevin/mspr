<%- include ("./partials/header") %>


<div class="container" id="newCont">
    <div class="container" id="newCont2">
    <h1>Add Your Restaurant</h1>
    <form action="/restaurants" method="POST" id="newForm">
        <input class="form-control" type="text" name="name"placeholder="Restaurant Name">
        <input class="form-control" type="text" name="location" id="location" placeholder="Restaurant Location">
        <div class="form-group">
            <label for="delivCheck">Delivery Available</label>
            <input class="form-control" id="delivCheck" type="checkbox" name="deliv" value=true >
        </div>
        <input class="form-control" type="text" name="phone"placeholder="Phone Number">
        <input class="form-control" type="text" name="hours" placeholder="Hours">
        <input class="form-control" type="text" name="image" placeholder="Image Link">
        <input class="form-control" type="text" name="siteLink" placeholder="Website">
        <div class="form-group">
            <label for="exampleFormControlSelect1">Neighbood</label>
                <select class="form-control" id="neigh-select" name="neigh">
                <option>MPLS SE</option>
                <option>MPLS SW</option>
                <option>MPLS NE</option>
                <option>MPLS N</option>
                <option>STP E</option>
                <option>STP W</option>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Cuisine</label>
                <select class="form-control" id="cuisine" name="cuisine">
                <option>American</option>
                <option>European</option>
                <option>Asian</option>
                <option>African</option>
                <option>Middle Eastern</option>
                <option>South/Central American</option>
            </select>
        </div>
        <input class="btn btn-large btn-primary" type="submit">
    </form>
</div>
</div>

<%- include ("./partials/footer") %>